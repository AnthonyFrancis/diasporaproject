<ul class="nav nav-pills nav-stacked">
	<div class="list-group">
	    <%= link_to mailbox_inbox_path, class: "list-group-item"  do %>
	        <span class="badge badge-danger pull-right"><%=current_user.mailbox.inbox.unread(current_user).count%></span>
	        <span>Inbox</span>
	    <% end %>
	    <%= link_to mailbox_sent_path, class: "list-group-item" do %>

	        <!-- <em class="fa fa-paper-plane-o fa-lg"></em> -->
	        <span>Sent</span>
	    <% end %>
	</div>  
</ul>


<% @conversations.each do |conversation| %>

	<div>
		<% if conversation.is_unread?(current_user) %>
		<strong>
			<%= link_to conversation.subject, conversation_path(conversation) %></strong>
		<% else %>
			<%= link_to conversation.subject, conversation_path(conversation) %>
		<% end %>
	</div>

<%end%>


<%= link_to "New Conversation", new_conversation_path %>