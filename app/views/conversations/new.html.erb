<h1>new conversation</h1>

<%= form_tag conversations_path, method: :post do %>
	<div>
		<%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :name) %>
	</div>

	<div>
		<%= text_field_tag :subject, nil, placeholder: "subject" %>
	</div>

	<div>
		<%= text_field_tag :body, nil, placeholder: "leave a comment" %>
	</div>

	<% if current_user_subscribed? %>
		<%= submit_tag %>
	<% else %>
		<%= link_to "Subscribe To Send", new_subscription_path, class: "btn btn-primary" %>
	<% end %>
<% end %>