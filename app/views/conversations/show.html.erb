<style type="text/css">
  ul.nav.nav-pills.nav-stacked {
    margin-left: 0px;

}

.col-md-4.pad {
    padding-left: 0px;
}


a.btn.btn-default.btn-sm.pull-right.pad {
    /* padding-right: 22px; */
    margin-right: 5px;
}

</style>

<div class="container">
  <div class="row">
    <div class="spacer"></div>
      <div class="col-md-12">
        <div class="col-md-4 pad">
          <span>Messages</span>
          <%= link_to new_conversation_path, class: "btn btn-default btn-sm pull-right pad" do %>
            <!-- <em class="glyphicon glyphicon-plus"></em> -->
            <span>New</span>
          <%end%>
          <br>
          <br>
      
        </div>
    </div>

    <div class="col-md-4">
          <%= render 'mailbox/folders' %>
    </div>

    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-body">
          <%= render partial: 'messages' %>
        </div>
        <div class="panel-footer">
          <!-- Reply Form -->
          <%= form_for :message, url: reply_conversation_path(conversation) do |f| %>
              <div class="form-group">
                <%= f.text_area :body, placeholder: "Reply Message", rows: 4, class: "form-control" %>
              </div>
              <%= f.submit "Reply", class: 'btn btn-danger pull-right' %>
          <% end %>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>

  </div>
</div>