<div id="custom-search-input">
  <%= form_tag people_path, method: :get, id: "global-search" do %>
    <div class="input-group col-md-12">

      <%= text_field_tag :q, params[:q], class: 'form-control input-lg', placeholder: 'Search people or investors' %>
      <span class="input-group-btn">
                <button class="btn btn-info btn-lg" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </span>
    </div>
  <% end %>
</div>