<div class="container">

<div class="col-md-4">
  <div class="thumbnail max-height">
    <h5><b>DiasporaProject Pro</b></h5>
    <h4><b>3 Day Free Trial</b></h4>
    <p>Â£24/month billed monthly after trial</p>
    <p>Features included in your subscription:</p>
    <li>Unlimited searches</li>
    <li>Access to all search filters</li>
    <li>Remove query limitation</li>
    <li>Message DiasporaProject Users</li>
  </div>
</div>

<div class="col-md-8">
  <%= form_tag subscription_path, id: "payment-form" do %>

    <% if current_user.card_last4? %>
      <div class="card-on-file">
        <p>Your current card on file is</p>
        <div><%= current_user.card_brand %> **** **** **** <%= current_user.card_last4 %></div>
        <div>Expires <%= current_user.card_exp_month %> / <%= current_user.card_exp_year %></div>
        <p><%= link_to "Use a different card", "#", class: "use-different-card" %></p>
      </div>  
    <% end %>

    <div class="card-fields <%= card_fields_class %>">
      <span class="payment-errors"></span>

      <div class="form-row">
        <label>
          <span>Card Number</span>
          <input value="4242 4242 4242 4242" type="text" size="20" data-stripe="number">
          
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>CVC</span>
          <input value="123" type="text" size="4" data-stripe="cvc">
        </label>
      </div>

      <div class="form-row">
        <label>
          <span>Expiration (MM/YYY)</span>
          <input value="12" type="text" size="2" data-stripe="exp-month">
        </label>
        <span> / </span>
        <input value="2020" type="text" size="4" data-stripe="exp-year">
      </div>
    </div>
      <%= hidden_field_tag :plan, params[:plan] %>
      <button type="submit">Start Trial</button>
  <% end %>
</div>

</div>