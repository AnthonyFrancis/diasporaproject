<style type="text/css">

body {
    background: #F2F3F4;
}

p {
    margin-bottom: 0px;
}

.outer-margin {
    margin-top: 50px;
}


</style>

<div class="container outer-margin">
  <div class="row">
    <div class="col-md-3">
      <p>People</p>
      <p><%= link_to "Investors", investors_path, class: "u-colorMuted" %></p>
    </div>


    <div class="col-md-9">

    <div class="panel panel-default">
      <div class="panel-heading"><p>Settings / General <%= resource_name.to_s.humanize %></p></div>
      <div class="panel-body">
        <%# form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= form_for(@user) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.label :investor, "Investor" %>
            <%= f.check_box :investor, autofocus: true %>
          </div>


          <div class="field">
            <%= f.label :username %><br />
            <%= f.text_field :username , autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.label :photo %>
            <%= f.file_field :photo, class: "form-control" %>
          </div>

          <%= image_tag(current_user.photo.url(:thumb), :width => "125x") %>


          <div class="field">
            <%= f.label :miniresume %><br />
            <%= f.text_area :miniresume , autofocus: true %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </div>

          <div class="field">
            <%# f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
            <% f.password_field :current_password, autocomplete: "off" %>
          </div>

          <div class="actions">
            <%= f.submit "Save" %>
          </div>
        <% end %>

        <h3>Cancel my account</h3>
        <!-- make sure use user_path(resource_name) -->
        <p>Unhappy? <%= button_to "Cancel my account", user_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>

      </div>
    </div>


      

    </div>
  </div>
</div>
