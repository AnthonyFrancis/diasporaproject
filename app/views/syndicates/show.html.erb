<script>
$(document).ready(function(){
    $(".edit").hide();
    $("#hide").click(function(){
        $(".edit").hide();
        $(".profileheader").show();
    });
    $("#show").click(function(){
        $(".edit").show();
        $(".profileheader").hide();
    });
});


$(document).ready(function(){
