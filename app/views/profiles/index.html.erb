<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Photo</th>
      <th>Name</th>
      <th>Location</th>
      <th>Minimum Investment</th>
      <th>Maximum Investment</th>
      <th>Angel Url</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= image_tag profile.photo.url(:medium) %></td>
        <td><%= profile.name %></td>
        <td><%= profile.location %></td>
        <td><%= profile.mininvest %></td>
        <td><%= profile.maxinvest %></td>
        <td><%= profile.angelurl %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>
