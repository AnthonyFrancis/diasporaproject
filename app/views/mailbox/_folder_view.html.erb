<style type="text/css">
  ul.nav.nav-pills.nav-stacked {
    margin-left: 0px;
</style>

<div class="container">
  <div class="row">
    <div class="spacer"></div>
      <div class="col-md-12">
        <div class="col-md-4">
          
          <div class="spacer"></div>
        </div>
    </div>

    <div class="col-md-4">
          <span>Messages</span>
          <%= link_to new_conversation_path, class: "btn btn-default btn-sm pull-right" do %>
            <!-- <em class="glyphicon glyphicon-plus"></em> -->
            <span>New</span>
          <%end%>
          <br>
          <br>
          <%= render 'mailbox/folders' %>

    </div>

    <div class="col-md-8">
      
          <% if is_conversation %>
            <div class="panel panel-default">
              <div class="panel-body">
                <%= render 'conversations/form' %>
              </div>
            </div>
          <% else %>
              <%= render partial: 'conversations/conversation', collection: messages %>
          <% end %>

    </div>

  </div>
</div>