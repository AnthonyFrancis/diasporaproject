<style type="text/css">
  .header {
    margin-bottom: 0;
    padding: 70px 30px 0px 0px;
    -ms-flex-direction: column;
    flex-direction: column;
}

</style>

<div class="container">
  <hr>

<div class="header">
  <div class="text-center">
    <h2><b>DiasporaProject Blog</b></h2>
    <p>Case studies, best practices and advice to raise money and grow your business</p>
    <div class="row align-items-center text-center">
      <div class="col-md-4 col-md-offset-4">
        <input type="text" name="FirstName" placeholder="Enter your email address" class="form-control">
      </div>
    </div>
      <div>
        <em>Join 12,000 subscribers and get new content straight into your inbox</em>
      </div>
  </div>
</div>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <td><%= blog.title %></td>
          <td><%= link_to 'Show', blog %></td>
          <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
          <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Blog', new_blog_path %>
</div>
